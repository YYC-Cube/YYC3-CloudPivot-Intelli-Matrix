# YYC³ CloudPivot Intelli-Matrix Environment Variables

# Supabase Configuration
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# WebSocket Configuration
# WebSocket server for real-time data push
VITE_WS_URL=ws://localhost:3113/ws

# Application Configuration
# Application name and version
VITE_APP_NAME=YYC³ CloudPivot Intelli-Matrix
VITE_APP_VERSION=0.0.1

# Deployment Configuration
# Production deployment URL
VITE_APP_URL=http://192.168.3.x:3118

# Feature Flags
# Enable/disable features
VITE_ENABLE_GHOST_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_AI_ASSISTANT=true

# Development Configuration
# Enable development mode features
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# API Configuration
# API endpoints (if any)
VITE_API_BASE_URL=http://localhost:3118/api

# Logging Configuration
# Log level: error, warn, info, debug
VITE_LOG_LEVEL=info

# Performance Configuration
# WebSocket reconnection settings
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10
VITE_WS_HEARTBEAT_INTERVAL=30000

# UI Configuration
# Theme configuration
VITE_DEFAULT_THEME=cyberpunk
VITE_DEFAULT_LANGUAGE=zh-CN

# Security Configuration
# Enable security features
VITE_ENABLE_CSP=true
VITE_ENABLE_XSS_PROTECTION=true
